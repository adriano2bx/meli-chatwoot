# .env.example
# Preencha com suas chaves. Para teste local, renomeie para .env
# Em produção (EasyPanel), insira estas variáveis na interface do painel.

# --- Configurações do Mercado Livre ---
MELI_APP_ID=
MELI_SECRET_KEY=
MELI_USER_ID=
# Estes tokens são obtidos no primeiro fluxo de autorização OAuth 2.0
MELI_ACCESS_TOKEN=
MELI_REFRESH_TOKEN=

# --- Configurações do Chatwoot ---
CHATWOOT_URL=https://seu.chatwoot.com
CHATWOOT_API_TOKEN=
CHATWOOT_ACCOUNT_ID=1
# Obtenha estes IDs na URL ao editar cada caixa de entrada no Chatwoot
CHATWOOT_QUESTIONS_INBOX_ID=
CHATWOOT_MESSAGES_INBOX_ID=
# Obtenha esta chave na página de configuração do Webhook no Chatwoot
CHATWOOT_WEBHOOK_SECRET=
